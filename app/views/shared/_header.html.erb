<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light p-1">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><%= image_tag "horizont.png" %></a>
        <%= form_with(url: "#", local: true, method: :get, class: "navbar-nav") do |form| %>
        <%= form.text_field :keyword, placeholder: "フリーワード検索", class: "form-control" %>
        <%= form.submit "検索", class:"btn btn-outline-primary btn-sm" %>
      <% end %>
      <div>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if user_signed_in? %>
        <li><%= button_to current_user.nickname, new_user_session_path, class: "nav-link active" %></li>
        <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link active" %></li>
        <li><%= button_to '新規投稿', new_tweet_path, method: :get, class: "nav-link active" %></li>
        <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "nav-link active" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "nav-link active" %></li>
        <%end%>
        </ul>
      </nav>
</header>